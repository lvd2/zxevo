		OUT (0X1F),A
		DIHALT
		IN A,(0X1F)
		DIHALT
		LD BC,0XFF
		OUT (C),B
		DIHALT
		IN A,(C)
		DIHALT
		LD C,0X7F
		OUT (C),A
		DIHALT
		LD C,0X5F
		IN A,(C)
		DIHALT
		LD C,0X3F
		OUT (C),A
		DIHALT
		IN A,(C)
