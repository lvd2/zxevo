INIT_PAGE	EXX
		LD D,A
		PEC_ON SHADOW_BF
		LD BC,WIN_A3
		LD E,0X40
		OUT (C),E
		LD B,HIGH (WIN_P3)
		OUT (C),D
		LD A,D
		LD (TEK_PAGE),A
		EXX
		RET

NEXT_PAGE	EXX
		LD BC,WIN_P3
		LD A,(TEK_PAGE)
		INC A
		OUT (C),A
		LD (TEK_PAGE),A
		EXX
		LD HL,CPU3
		RET
