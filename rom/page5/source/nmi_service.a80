;		LD E,0X0F
;SETPAL1		LD A,E
;		BIT 3,E
;		OUT (0XFE),A
;		JR Z,$+4
;		OUT (0XF6),A
;		LD A,(HL)
;		INC HL
;		OR %00001100
;		OUT (0XFF),A
;		DEC E
;		JP P,SETPAL1
;		LD BC,0XFF77
;		OUT (C),D

		PUSH DE
		LD BC,WIN_P6
		XOR A
		OUT (C),A			;включили последнюю страницу озу
		LD B,HIGH (WIN_A3)
		LD A,0X40
		OUT (C),A			;сняли зависимость 3 окна от порта 7FFD
		LD DE,CPU6
		ADD HL,DE
		LD (ADR_PALITRA),HL
		LD HL,CPU6
		ADD HL,SP
		LD SP,HL
		LD B,HIGH (WIN_A0)
		LD A,ROM_RST83
		OUT (C),A
		POP HL
		LD (NUM_IM),HL
