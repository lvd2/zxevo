;выход из магика
EXITNMISERVICE	LD HL,ADR_MAGIC
		LD (HL),0XC9			;заглушка на MAGIC
		IN A,(PEVO_CONF)
		OR M_NMI_BF
		OUT (PEVO_CONF),A
		AND M_NMI_BF!0XFF
		OUT (PEVO_CONF),A
		HALT				;ждем срабатывания MAGIC 
FALSE_NMI	LD HL,ADR_MAGIC
		LD (HL),0XC3			;разрешение обработчика MAGIC перед выходом

;		LD HL,0
;ADR_PALITRA	EQU $-2
;		LD A,(N_77-CPU6)
;		LD E,0X0F
;		AND E
;		OR 0XA0
;		LD D,A
;		LD BC,0XBD77			;доступ к палитре
;		OUT (C),D			;вкл.PAL
;SETPAL0		LD A,E
;		BIT 3,E
;		OUT (0XFE),A
;		JR Z,$+4
;		OUT (0XF6),A
