;инициализация
iniini
      ; LD A,device ;0XB0=slave
      ; LD BC,hddhead
      ; CALL OUT_A ;есть внутри NO_BSY
        CALL	NO_BSY
    ;LD A,0XFE
    ;IN A,(-2)
    ;RRA
    ;JNC SKIPINI
      ;LD A,0X10        ;
      ;CALL HDSC       ;ZET9 для HDD
        LD	A,0X08        ;
