        DW	0X28   ;"READ(10)"
SECTOR  DB	0,0,0,0
        DB	0
        DB	0,1   ;=1 сектор
        DB	0
        DB	0,0
;       ENDIF	
AP_READTOC
        DW	0X43   ;SCMSF=0,т.е.секторы,а не MSF
        DB	0     ;FORMAT=0:все сессии
        DUPL	3,0
        DB	0     ;с 1-й сессии
        DB	HIGH (2048) ;длина табл
        DB	LOW (2048)
        DB	0X00   ;FUNC
        DUPL	2,0

