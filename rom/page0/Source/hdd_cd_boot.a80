      ;RET C ;ATAPI only
      ; LD A,device ;0XB0=slave   ;
      ; LD BC,hddhead            ;BUDDER
      ; CALL OUT_A ;есть в HDSC  ;иначе при нераскрученном CD
                                 ;не выдаст EB14!!!
        LD	A,0XEC ;identify
        CALL	HDSC
      ;RET C ;для CD выдаст ошибку (VEGA)

        LD	B,30
        HALT	
        DJNZ	$-1

        CALL	LEN_TO_HL
        LD	BC,0XEB14
        OR	A
        SBC	HL,BC
       JP	NZ,iniini;0 ;HDD
       ;LD A,1
       ;OUT (-2),A

