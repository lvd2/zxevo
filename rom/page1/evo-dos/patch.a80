;[0x214A   /]
;      FAT 
;   TR-DOS 
	IF EMU
GET_COMMAND2	LD A,(TRD_5CEF)
		AND A
		CALL NZ,NOMER_DRV		;  FAT      "."
		RET C				;     FAT 
		LD A,(TRD_5D19)
		ADD A,"A"
		RST 0X10
		RET
	ENDIF

;[     ]
PRINT_NUM_TRK	PUSH DE
		PUSH AF
		PUSH DE
		LD A,0X16
		RST 0X10
		LD A,(0X5C6B)
		DEC A
		RST 0X10
		LD A,0
		RST 0X10
		LD HL,TXT_FORMAT_TRK
		RST 0X18
		POP DE
		LD C,E
		LD B,0
		CALL PRINT_CHISLO
		LD HL,TXT_FSIDE
		RST 0X18
		POP AF
		LD A,"0"
		ADC A,0
		RST 0X10
		POP DE
		RET
		
TXT_FORMAT_TRK	DC "FORMAT TRACK: "
TXT_FSIDE	DC "  SIDE: "

;[0x3057   "."   ]
CMP_SPECSYM	LD HL,(TRD_5CD9)
		LD A,(HL)
		CP "."
		JP NZ,FIND_KEYWORD
		POP HL
		RET

;[0x0325 ENDCOMAND]
ENDCOMAND	LD A,D
		CP "."
		JP NZ,END_COMAND
		cp __RETURN
		call nz,CREATE_BUF		;  
		ld a,9
		ld (TRD_5D06),a			;      
		xor a
		ld (TRD_5D0F),a			; 	 TR-DOS
		ld (TRD_5CD6),a			; #FF-   
		ld (TRD_5D10),a			;   
		ld hl,FLAGS
		res 7,(hl)
		LD HL,COM_DOT
		JP LOC_353

;[0x3EBF BUGFIX_3EBF]
BUGFIX_3EBF	PUSH AF
		PUSH HL
		CALL GET_TIME_HEAD
		LD B,A
		POP HL
		POP AF
		JP HEAD_POSITION

;[0x211E    ]
CLRBUF_EDITOR2	POP HL
		RES 7,(IY+1)
		RST 0X20
		DW 0X19FB
		XOR A
		LD (SUBPPC),A
		DEC A
		LD (ERR_NR),A
		LD HL,(E_LINE)
		LD (CH_ADD),HL
		RST 0X20
		DW 0X19FB
		RST 0X20
		DW 0X18
		RST 0X20
		DW 0X16B0
		RET

;[     ]
loc_20D1	AND A
		CALL PRINT_NUM_TRK
		CALL FORMAT_TREK
		CALL COM_17
		SCF
		JP PRINT_NUM_TRK
