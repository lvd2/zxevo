;[0x1CFE  ]
DELETE_BUFFER	CALL DELETE_BUF
		JP CLRBUF_EDITOR

;[0x1D5E  ]
RUN_FILE	JP Z,WORK4AUTORUN		;    
		CP "C"
		JP NZ,SINTAX_ERROR
RUNCODE		LD HL,RUN_CODE
		LD (TRD_5D1A),HL
